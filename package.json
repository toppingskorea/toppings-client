{
  "name": "toppings",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:client": "turbo run dev --filter client",
    "dev:admin": "turbo run dev --filter admin",
    "lint": "turbo run lint",
    "start": "next start",
    "test": "jest --watch",
    "test:coverage": "jest --coverage --coverageDirectory=output/coverage/jest",
    "test:ci": "jest --ci",
    "type-check:ci": "yarn workspaces since run type-check",
    "postinstall": "husky install",
    "build:storybook:ci": "yarn workspace @toppings/monorepo-storybook-builder build && yarn workspace @toppings/monorepo-storybook-builder storybook-to-ghpages --out=.out --packages=apps"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/runtime": "^7.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/axios": "^0.14.0",
    "@types/jest": "^29.1.1",
    "@types/node": "18.8.2",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "8.24.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "turbo": "^1.6.3",
    "typescript": "4.8.4"
  },
  "packageManager": "yarn@3.3.0"
}
